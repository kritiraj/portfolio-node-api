{
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": ["error", {
            "allow": ["info", "error"]
        }],
        "no-unused-vars": [2, {"vars": "all", "args": "none"}],
        "require-atomic-updates": "off"
    },
    "extends": ["eslint:recommended", "semistandard", "prettier"]
}